<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>{{ is_homepage ?? site.title :: trail|join:": "|titlecase }}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="@root/css/theme.css">
	<link rel="stylesheet" href="@root/css/pygments.css">
	<!--[if lt IE 9]><script src="@root/js/html5shiv.min.js"></script><![endif]-->
	<script src="@root/js/jquery-1.11.2.min.js"></script>
	<script src="@root/js/theme.js"></script>
</head>

<body class="{{{classes}}}">

	<header id="header" class="header meta">
		{% if includes.menu %}
			<div class="hamburger unselectable">â˜°</div>
			{{ includes.menu }}
		{% endif %}
	</header>

	<article id="content" class="content">
		<h1>{{ trail|last|titlecase }}</h1>

		{% for record in records %}
			{% if record.title || record.html|firsth %}
				<h3>{{ record.title || record.html|firsth }}</h3>
			{% endif %}
			<p>{{ record.html|firstp }}</p>
			<p><a href="{{ record.url }}">Read more...</a></p>
			{% if not loop.is_last %}<hr>{% endif %}
		{% endfor %}

		{% if is_paged %}
			<hr>
			<p class="paging">
				{% if page > 1 %}
					<a href="{{ first_url }}">First</a> ~ <a href="{{ prev_url }}">Prev</a> ~
				{% endif %}
				<span>Page {{ page }} of {{ total }}</span>
				{% if page < total %}
					~ <a href="{{ next_url }}">Next</a> ~ <a href="{{ last_url }}">Last</a>
				{% endif %}
			</p>
		{% endif %}
	</article>

	<footer id="footer" class="footer meta">
		{{ includes.menu }}
	</footer>

</body>
</html>
